<resources>
    <!-- Base application theme. -->
    <style name="Theme.ImageMachine" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white_alt</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorReverse">@color/black</item>
        <item name="colorReverseVariant">@color/black_alt</item>
        <item name="colorMask">@color/gray_white</item>
        <item name="colorMaskTransparent">@color/gray_white_transparent</item>
        <item name="fontFamily">@font/ibm</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Core</item>
        <item name="actionMenuTextAppearance">@style/TextAppearance.MaterialComponents.Headline6.Menu</item>
        <item name="android:textColorPrimary">?attr/colorReverse</item>
        <item name="android:textColorSecondary">?attr/colorReverse</item>
        <item name="android:colorBackground">?attr/colorOnSecondary</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Widget.MaterialComponents.Toolbar.Core">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title.Core</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline6.Menu">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Widget.AppCompat.Toolbar.Title.Core">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>